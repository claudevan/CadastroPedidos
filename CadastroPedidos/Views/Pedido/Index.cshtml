
@{
    ViewBag.Title = "Consulta Pedido";
}

<h2>Consulta de Pedido</h2>

<form id="formPesquisar">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <label for="cliente">Cliente:</label>
            <div>
                @Html.DropDownList("cliente", (List<SelectListItem>)@ViewBag.Clientes, "", new { @class = "form-control", name= "cliente" })
            </div>
        </div>

        <div class="form-group">
            <label for="numero">Número:</label>
            <div>
                <input type="number" id="numero" name="numero" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="dataInicial">Data Incial:</label>
            <div>
                <input type="date" id="dataInicial" name="dataInicial" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="dataFinal">Data Final:</label>
            <div>
                <input type="date" id="dataFinal" name="dataInicial" class="form-control" />
            </div>
        </div>

        <button id="btnNovo" class="btn btn-success">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            Pesquisar
        </button>
    </div>
</form>


